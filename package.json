{
  "name": "vchat-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter ./apps/frontend dev",
    "build": "pnpm --filter ./apps/frontend build",
    "preview": "pnpm --filter ./apps/frontend preview",
    "lint": "pnpm -w -r run lint",
    "format": "pnpm -w -r run format",
    "bootstrap": "pnpm -w install"
  }
}
